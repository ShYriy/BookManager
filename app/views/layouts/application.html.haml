!!!
%html
  %head
    %meta{:charset => "utf-8"}/
    %title BookManager
    %meta{:content => "width=device-width,initial-scale=1", :name => "viewport"}/
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag "application"
    = javascript_include_tag "application", "data-turbo-track": "reload", defer: true
  %body
    %header.p-3.bg-dark.text-white
      .container
        %nav.d-flex.flex-wrap.align-items-center.justify-content-center.justify-content-lg-start
          %ul.nav.col-12.col-lg-auto.me-lg-auto.mb-2.justify-content-center.mb-md-0
            %li= link_to 'Main', root_path, class: 'nav-link px-2 text-white'
            %li= link_to 'Books', books_path, class: 'nav-link px-2 text-white'
          %ul.nav.pull-right
            - if current_user
              = link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'nav-link px-2 text-white'
            - else
              %li= link_to 'Sign Up', new_user_registration_path, class: 'nav-link px-2 text-white'
              %li= link_to 'Sign In', new_user_session_path, class: 'nav-link px-2 text-white'
    %main.container.mt-3
      - if flash[:notice].present?
        .alert.alert-success
          = flash[:notice]
      - if flash[:error].present?
        .alert.alert-danger
          = flash[:error]
      = yield
